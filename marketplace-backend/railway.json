{
  "$schema": "https://railway.app/schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nodeVersion": "20"
  },
  "deploy": {
    "startCommand": "npx prisma generate && npx prisma migrate deploy && npm start",
    "healthcheckPath": "/api/protected",
    "healthcheckTimeout": 60,
    "restartPolicy": "always",
    "environmentVariables": {
      "NODE_ENV": "production"
    }
  }
}

