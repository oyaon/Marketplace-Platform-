{
  "$schema": "https://railway.app/schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksBuilder": "nodejs_20"
  },
  "deploy": {
    "startCommand": "npx prisma generate && npx prisma migrate deploy && npm start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 60,
    "restartPolicy": "always"
  }
}

